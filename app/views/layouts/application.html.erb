<!DOCTYPE html>
<html>
<head>
  <title>Surface3</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container-fluid">
<%= render 'layouts/nav'  %>
<hr>







	<section>
		<div>
			<% if flash[:welcome] %>
				<h4 class="bg-success flash">
				<%= flash[:welcome]  %></h4>
			<% end %>
		</div>	
		<div>
			<% if flash[:success] %>
				<h4 class="bg-success flash">
				<%= flash[:success]  %></h4>
			<% end %>
		</div>	
		<div>
			<% if flash[:error] %>
				<h4 class="bg-danger flash">
				<%= flash[:error]  %></h4>
			<% end %>
		</div>	
	</section>

	<%= yield %>









<br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
<%= render 'layouts/footer'  %>
</div>
</body>
</html>
